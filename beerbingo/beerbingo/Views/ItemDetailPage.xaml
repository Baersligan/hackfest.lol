<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="beerbingo.Views.ItemDetailPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Beer to drink:" FontSize="Small" />
        <Label Text="{Binding Item.Text}" FontSize="Medium" />
        <Label Text="Place to go:" FontSize="Small" />
        <Label Text="{Binding Item.Description}" FontSize="Medium" />
        <Button Text="Find this BEER!" BorderWidth="0" Clicked="OnButtonClicked" />
        <Button Text="Nam Nam... Done!" BackgroundColor="Green" BorderWidth="0" Clicked="OnButtonClicked" />
    </StackLayout>
</ContentPage>