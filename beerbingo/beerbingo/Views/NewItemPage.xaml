    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
        <ToolbarItem Text="Start" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
<ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Number of beers you can drink" FontSize="Medium" />
